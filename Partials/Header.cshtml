    <script>
        // Dropdown toggle
        const productButton = document.getElementById('product-button');
        const productDropdown = document.getElementById('product-dropdown');
        let isDropdownOpen = false;

        productButton?.addEventListener('click', () => {
            isDropdownOpen = !isDropdownOpen;
            productDropdown.classList.toggle('hidden', !isDropdownOpen);
        });

        document.addEventListener('click', (event) => {
            if (!productButton?.contains(event.target) && !productDropdown?.contains(event.target)) {
                productDropdown.classList.add('hidden');
                isDropdownOpen = false;
            }
        });

        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const closeMenuButton = document.getElementById('close-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const backdrop = document.getElementById('backdrop');

        function openMobileMenu() {
            mobileMenu.classList.remove('translate-x-full');
            backdrop.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeMobileMenu() {
            mobileMenu.classList.add('translate-x-full');
            backdrop.classList.add('hidden');
            document.body.style.overflow = '';
        }

        mobileMenuButton?.addEventListener('click', openMobileMenu);
        closeMenuButton?.addEventListener('click', closeMobileMenu);
        backdrop?.addEventListener('click', closeMobileMenu);



        ///icon chuong
        const notificationButton = document.querySelector('.fa-bell'); // Chọn icon chuông
        const notificationDropdown = document.getElementById('notification-dropdown');
        let isNotificationOpen = false;

        // Toggle dropdown
        notificationButton?.addEventListener('click', () => {
            isNotificationOpen = !isNotificationOpen;
            notificationDropdown.classList.toggle('hidden', !isNotificationOpen);
        });

        // Ẩn dropdown khi nhấn bên ngoài
        document.addEventListener('click', (event) => {
            if (!notificationButton.contains(event.target) && !notificationDropdown.contains(event.target)) {
                notificationDropdown.classList.add('hidden');
                isNotificationOpen = false;
            }
        });

    </script>
