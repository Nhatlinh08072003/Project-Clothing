@model ResetPasswordDTO
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">@ViewData["Title"]</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="ResetPassword" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="CurrentPassword" class="block text-gray-600 mb-2">Mật khẩu hiện tại</label>
                <input asp-for="CurrentPassword" type="password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <span asp-validation-for="CurrentPassword" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="NewPassword" class="block text-gray-600 mb-2">Mật khẩu mới</label>
                <input asp-for="NewPassword" type="password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-gray-600 mb-2">Xác nhận mật khẩu mới</label>
                <input asp-for="ConfirmPassword" type="password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit"
                class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                Đổi mật khẩu
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}