<div class="min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold text-gray-800 text-center">Đổi mật khẩu</h2>
        <form class="mt-6">
            <!-- Mật khẩu cũ -->
            <div class="mb-4">
                <label for="current_password" class="block text-gray-600 mb-2">Mật khẩu cũ</label>
                <input type="password" id="current_password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    placeholder="Nhập mật khẩu cũ" />
            </div>

            <!-- Mật khẩu mới -->
            <div class="mb-4">
                <label for="new_password" class="block text-gray-600 mb-2">Mật khẩu mới</label>
                <input type="password" id="new_password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    placeholder="Nhập mật khẩu mới" />
            </div>

            <!-- Xác nhận mật khẩu mới -->
            <div class="mb-4">
                <label for="confirm_password" class="block text-gray-600 mb-2">Xác nhận mật khẩu mới</label>
                <input type="password" id="confirm_password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    placeholder="Nhập lại mật khẩu mới" />
            </div>

            <!-- Nút đổi mật khẩu -->
            <button type="submit"
                class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                Đổi mật khẩu
            </button>
        </form>
    </div>
</div>
