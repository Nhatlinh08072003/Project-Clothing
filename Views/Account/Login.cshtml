@model Project_Clothing.Models.LoginDTO
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="flex min-h-screen items-center justify-center bg-gray-100">
    <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Đăng nhập</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        }

        <form asp-action="Login" asp-controller="Account" method="post" class="space-y-4">
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Địa chỉ email</label>
                <input asp-for="Email" type="email"
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    placeholder="bạn@example.com" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Mật khẩu</label>
                <input asp-for="Password" type="password"
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input asp-for="RememberMe" type="checkbox"
                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                    <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-700">
                        Ghi nhớ đăng nhập
                    </label>
                </div>
            </div>

            <button type="submit"
                class="w-full px-4 py-2 text-white hover:bg-gray-500 rounded-lg bg-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-1">
                Đăng nhập
            </button>
        </form>

        <p class="text-sm text-center text-gray-500 mt-4">
            Chưa có tài khoản?
            <a asp-action="Dangki" asp-controller="Register" class="text-gray-600 hover:underline">Đăng ký</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}