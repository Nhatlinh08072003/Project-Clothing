<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase History</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">

    <div class="min-h-screen bg-gray-100 p-6">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Purchase History</h1>

        <div class="max-w-5xl mx-auto space-y-6">
            <!-- Example of a purchased item -->
            <div class="flex items-center bg-white rounded-lg shadow-md overflow-hidden">
                <!-- Product Image -->
                <img src="product1.jpg" alt="Wireless Headphones"
                    class="w-24 h-24 object-cover border-r border-gray-300">

                <!-- Product Details -->
                <div class="flex-grow p-4">
                    <h2 class="text-lg font-semibold text-gray-800">Wireless Headphones</h2>
                    <p class="text-sm text-gray-500">Quantity: 1</p>
                    <p class="text-sm text-gray-500">Delivery Date: 12/20/2024</p>
                    <p class="text-sm text-gray-500">Order Status:
                        <span class="font-semibold text-blue-600">Delivered</span>
                    </p>
                </div>

                <!-- Price -->
                <div class="p-4 text-right">
                    <p class="text-xl font-bold text-gray-800">$59.99</p>
                </div>
            </div>

            <!-- Another purchased item -->
            <div class="flex items-center bg-white rounded-lg shadow-md overflow-hidden">
                <!-- Product Image -->
                <img src="product2.jpg" alt="Smart Watch" class="w-24 h-24 object-cover border-r border-gray-300">

                <!-- Product Details -->
                <div class="flex-grow p-4">
                    <h2 class="text-lg font-semibold text-gray-800">Smart Watch</h2>
                    <p class="text-sm text-gray-500">Quantity: 2</p>
                    <p class="text-sm text-gray-500">Delivery Date: 12/18/2024</p>
                    <p class="text-sm text-gray-500">Order Status:
                        <span class="font-semibold text-blue-600">Delivered</span>
                    </p>
                </div>

                <!-- Price -->
                <div class="p-4 text-right">
                    <p class="text-xl font-bold text-gray-800">$120.00</p>
                </div>
            </div>

            <!-- Another purchased item -->
            <div class="flex items-center bg-white rounded-lg shadow-md overflow-hidden">
                <!-- Product Image -->
                <img src="product3.jpg" alt="Gaming Mouse" class="w-24 h-24 object-cover border-r border-gray-300">

                <!-- Product Details -->
                <div class="flex-grow p-4">
                    <h2 class="text-lg font-semibold text-gray-800">Gaming Mouse</h2>
                    <p class="text-sm text-gray-500">Quantity: 1</p>
                    <p class="text-sm text-gray-500">Delivery Date: 12/24/2024</p>
                    <p class="text-sm text-gray-500">Order Status:
                        <span class="font-semibold text-yellow-500">Shipped</span>
                    </p>
                </div>

                <!-- Price -->
                <div class="p-4 text-right">
                    <p class="text-xl font-bold text-gray-800">$35.50</p>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
