@model Project_Clothing.Models.UserProfileDTO

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">

    <div class="flex min-h-screen items-center justify-center">
        <div class="w-full max-w-4xl bg-white rounded-lg shadow-md p-8">
            <!-- Profile Header -->
            <div class="flex items-center">
                <img src="profile-picture.jpg" alt="User Avatar"
                    class="w-24 h-24 rounded-full border-4 border-blue-500">
                <div class="ml-6">
                    <h1 class="text-2xl font-bold text-gray-800">@Model.Username</h1>
                    <p class="text-sm text-gray-500">@Model.Email</p>
                </div>
            </div>

            <!-- Profile Information -->
            <div class="mt-8 space-y-6">
                <!-- Personal Details -->
                <div>
                    <h2 class="text-lg font-semibold text-gray-800">Personal Details</h2>
                    <div class="mt-2 grid grid-cols-1 sm:grid-cols-2 gap-4">

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Email Address</label>
                            <p class="mt-1 text-gray-900">@Model.Email</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Phone Number</label>
                            <p class="mt-1 text-gray-900">@Model.Phone</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Address</label>
                            <p class="mt-1 text-gray-900">@Model.Address</p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Last Login</label>
                            <p class="mt-1 text-gray-900">@Model.LastLogin?.ToString("yyyy-MM-dd HH:mm:ss")</p>
                        </div>
                    </div>
                </div>

                <!-- Account Settings -->
                <div>
                    <h2 class="text-lg font-semibold text-gray-800">Account Settings</h2>
                    <div class="mt-2 space-y-4">
                        <a href="@Url.Action("ResetPassword", "Account")"
                            class="w-full block text-center px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Change Password
                        </a>
                        <form method="post" action="@Url.Action("Logout", "Account")">
                            <button
                                class="w-full px-4 py-2 text-white bg-red-600 rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">
                                Logout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
