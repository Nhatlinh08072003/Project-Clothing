@{
    ViewData["Title"] = "Auction";
}

<body class="bg-slate-100 min-h-screen">
    <main class="container mx-auto py-8 px-4 max-w-7xl">


        <!-- Filter Section -->
        <section class="bg-white shadow-2xl p-8 mb-8">
            <h2 class="text-2xl font-bold text-slate-800 mb-8 uppercase tracking-wider">Advanced Filters</h2>
            <form class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Price Filter -->
                <div>
                    <label for="price" class="block text-sm font-medium text-slate-600 uppercase tracking-wider mb-3">
                        Price Range
                    </label>
                    <select id="price"
                        class="w-full bg-slate-50 border-0 h-12 px-4 text-slate-800 focus:ring-2 focus:ring-slate-800 transition-all">
                        <option value="">All Ranges</option>
                        <option value="1">Under $500</option>
                        <option value="2">$500 - $1,000</option>
                        <option value="3">Above $1,000</option>
                    </select>
                </div>

                <!-- Category Filter -->
                <div>
                    <label for="category"
                        class="block text-sm font-medium text-slate-600 uppercase tracking-wider mb-3">
                        Category
                    </label>
                    <select id="category"
                        class="w-full bg-slate-50 border-0 h-12 px-4 text-slate-800 focus:ring-2 focus:ring-slate-800 transition-all">
                        <option value="">All Categories</option>
                        <option value="electronics">Electronics</option>
                        <option value="fashion">Fashion</option>
                        <option value="home">Home & Living</option>
                    </select>
                </div>

                <!-- Sort Filter -->
                <div>
                    <label for="sort" class="block text-sm font-medium text-slate-600 uppercase tracking-wider mb-3">
                        Sort By
                    </label>
                    <select id="sort"
                        class="w-full bg-slate-50 border-0 h-12 px-4 text-slate-800 focus:ring-2 focus:ring-slate-800 transition-all">
                        <option value="latest">Latest</option>
                        <option value="price-low">Price: Low to High</option>
                        <option value="price-high">Price: High to Low</option>
                        <option value="ending">Ending Soon</option>
                    </select>
                </div>

                <!-- Apply Button -->
                <div class="flex items-end">
                    <button type="submit"
                        class="w-full bg-slate-800 text-white h-12 hover:bg-slate-900 transition-all flex items-center justify-center space-x-2">
                        <span class="uppercase tracking-wider">Apply Filters</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </form>
        </section>

        <!-- Products Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Product Card 1 -->
            <div class="bg-white shadow-2xl group">
                <div class="relative">
                    <img src="/api/placeholder/600/400" alt="Product 1" class="w-full h-[300px] object-cover">
                    <div class="absolute top-4 right-4 bg-white px-4 py-2">
                        <span class="text-slate-800 font-medium">01:20:45</span>
                    </div>
                </div>
                <div class="p-8">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-bold text-slate-800">iPhone 14 Pro Max</h3>
                        <span class="bg-slate-100 text-slate-800 px-3 py-1 text-sm">Premium</span>
                    </div>
                    <div class="space-y-4 mb-6">
                        <p class="text-slate-600 flex justify-between">
                            <span>Current Bid</span>
                            <span class="font-bold text-slate-800">$25,500</span>
                        </p>
                        <p class="text-slate-600 flex justify-between">
                            <span>Total Bids</span>
                            <span class="font-bold text-slate-800">28</span>
                        </p>
                    </div>
                    <button
                        class="w-full bg-slate-800 text-white py-4 hover:bg-slate-900 transition-all uppercase tracking-wider">
                        Place Bid
                    </button>
                </div>
            </div>

            <!-- Product Card 2 -->
            <div class="bg-white shadow-2xl group">
                <div class="relative">
                    <img src="/api/placeholder/600/400" alt="Product 2" class="w-full h-[300px] object-cover">
                    <div class="absolute top-4 right-4 bg-white px-4 py-2">
                        <span class="text-slate-800 font-medium">02:45:30</span>
                    </div>
                </div>
                <div class="p-8">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-bold text-slate-800">MacBook Pro M2</h3>
                        <span class="bg-slate-100 text-slate-800 px-3 py-1 text-sm">Featured</span>
                    </div>
                    <div class="space-y-4 mb-6">
                        <p class="text-slate-600 flex justify-between">
                            <span>Current Bid</span>
                            <span class="font-bold text-slate-800">$35,900</span>
                        </p>
                        <p class="text-slate-600 flex justify-between">
                            <span>Total Bids</span>
                            <span class="font-bold text-slate-800">15</span>
                        </p>
                    </div>
                    <button
                        class="w-full bg-slate-800 text-white py-4 hover:bg-slate-900 transition-all uppercase tracking-wider">
                        Place Bid
                    </button>
                </div>
            </div>

            <!-- Product Card 3 -->
            <div class="bg-white shadow-2xl group">
                <div class="relative">
                    <img src="/api/placeholder/600/400" alt="Product 3" class="w-full h-[300px] object-cover">
                    <div class="absolute top-4 right-4 bg-white px-4 py-2">
                        <span class="text-slate-800 font-medium">03:15:20</span>
                    </div>
                </div>
                <div class="p-8">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-bold text-slate-800">Samsung S23 Ultra</h3>
                        <span class="bg-slate-100 text-slate-800 px-3 py-1 text-sm">Hot</span>
                    </div>
                    <div class="space-y-4 mb-6">
                        <p class="text-slate-600 flex justify-between">
                            <span>Current Bid</span>
                            <span class="font-bold text-slate-800">$22,300</span>
                        </p>
                        <p class="text-slate-600 flex justify-between">
                            <span>Total Bids</span>
                            <span class="font-bold text-slate-800">32</span>
                        </p>
                    </div>
                    <button
                        class="w-full bg-slate-800 text-white py-4 hover:bg-slate-900 transition-all uppercase tracking-wider">
                        Place Bid
                    </button>
                </div>
            </div>
        </div>
    </main>
</body>

</html>