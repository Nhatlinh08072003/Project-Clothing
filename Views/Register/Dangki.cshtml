@model Project_Clothing.Models.RegisterDTO
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="flex min-h-screen items-center justify-center bg-gray-100 mt-[120px]">
    <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md mt-[40px]">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Tạo tài khoản mới</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-50 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Dangki" asp-controller="Register" method="post" class="space-y-4">
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Địa chỉ email</label>
                <input asp-for="Email" type="email"
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    placeholder="bạn@example.com" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Phone" class="block text-sm font-medium text-gray-700">Số điện thoại</label>
                <input asp-for="Phone" type="text"
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    placeholder="0123456789" />
                <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Address" class="block text-sm font-medium text-gray-700">Địa chỉ</label>
                <input asp-for="Address" type="text"
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Số nhà, Đường, Thành phố" />
                <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Mật khẩu</label>
                <input asp-for="Password" type="password"
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Xác nhận mật
                    khẩu</label>
                <input asp-for="ConfirmPassword" type="password"
                    class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                    placeholder="••••••••" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center space-x-2">
                <input asp-for="Terms" type="checkbox"
                    class="h-5 w-5 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                <label asp-for="Terms" class="text-sm text-gray-700">
                    Tôi đồng ý với <a href="/terms" class="text-blue-600 hover:underline">Điều khoản và Điều kiện</a>.
                </label>
                <span asp-validation-for="Terms" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit"
                class="w-full px-4 py-2 text-white hover:bg-gray-500 rounded-lg bg-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-1">
                Đăng ký
            </button>
        </form>

        <p class="text-sm text-center text-gray-500 mt-4">
            Đã có tài khoản?
            <a asp-action="Login" asp-controller="Account" class="text-gray-600 hover:underline">Đăng nhập</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('form').submit(function (e) {
                if (!$('#Terms').is(':checked')) {
                    e.preventDefault();
                    alert('Vui lòng chấp nhận Điều khoản và Điều kiện để tiếp tục.');
                }
            });
        });
    </script>
}